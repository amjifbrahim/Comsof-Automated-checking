{
  "functions": {
    "Backend/api/*.py": {
      "maxDuration": 300
    }
  },
  "routes": [
    {
      "src": "Backend/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/build/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/build/index.html"
    }
  ],
  "env": {
    "PYTHONPATH": "./"
  }
}